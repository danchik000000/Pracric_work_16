class Program
{
    static void Main()
    {
        var c = new Counter("Счётчик", 10);

        c = c + 5; 
        Console.WriteLine(c); 

        c["value"] = 20; 
        Console.WriteLine($"Значение через индексатор: {c["value"]}"); 

        Console.ReadKey();
    }
}
public class Counter
{
    public string Name { get; set; }
    public int Value { get; set; }
    public Counter(string name, int value) { Name = name; Value = value; }

    public static Counter operator +(Counter c, int amount)
        => new Counter(c.Name, c.Value + amount);

    public int this[string key]
    {
        get => key.ToLower() == "value" ? Value : 0;
        set { if (key.ToLower() == "value") Value = value; }
    }
    public override string ToString() => $"{Name}: {Value}";
}
